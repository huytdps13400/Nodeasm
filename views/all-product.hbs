<script>

  const gotoEdit = (id) => {
    console.log(id)
    window.location.href = '/product/edit-product/' + id;
  }
  function deleteProduct(id) {
    $.ajax({
      type: "DELETE",
      url: '/product/delete-product/' + id,
      success: function (data) {
        if (data.resss == true) {
          window.location.href = '/product/all-product'
        }
      }
    });
  }


</script>