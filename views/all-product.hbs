      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Product Data Table</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category of Product</th>
                    <th style="width: 100px;">Function</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each product}}
                  <tr>
                    <td><img width="100" height="100" style="object-fit: contain;"
                        src="http://localhost:3010/images/{{this.image}}" alt=""> </td>
                    <td><span>{{this.name}}</span></td>
                    <td>{{this.price}} VND</td>
                    <td>{{this.published}}</td>
                    <td>{{this.mota}}</td>
                    <td> {{this.nameCategory}}</td>
                    <td class="text-right ">
                      <button type="button" style="width: 100px; " class="btn btn-success"
                        onclick="gotoEdit('{{this._id}}')">Edit</button>
                      <button type="button" style="width: 100px;   margin-top:20px;" class="btn btn-danger"
                        onclick="deleteProduct('{{this._id}}')">Delete</button>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
                <tfoot>
                  <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category of Product</th>
                    <th>Function</th>
                  </tr>
                </tfoot>
              </table>
            </div><!-- /.box-body -->
